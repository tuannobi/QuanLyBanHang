@model IEnumerable<QuanLyBanHang.Models.NhaCungCap>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Layout_Admin.cshtml";
}
@section Links{
    <link rel="stylesheet" href="~/admin/custom/admin_users.css" />
   @* <link rel="stylesheet" href="/admin/css/ncc.css" />*@
}
<div class="container">
    <div class="header-content">
        <h2>Danh sách nhà cung cấp</h2>
        <div class="header-event">

            <a class="add-user" href="/NhaCungCap/Create">
                <i class="fa fa-plus" aria-hidden="true"></i>&nbsp;
                Thêm nhà cung cấp
            </a>
            <a class="add-user" onclick="DeleteSelected()">
                <i class="fa fa-minus" aria-hidden="true"></i>&nbsp;
                Xóa nhà cung cấp
            </a>
        </div>
        </div>
        <div class="content-content vertical-menu">
            <table>
                <tr>
                    <th><input type="checkbox" id="checkall" /></th>
                    <th>Mã nhà cung cấp</th>
                    <th>Tên nhà cung cấp</th>
                    <th>Địa chỉ</th>
                    <th>Email</th>
                    <th>Số điện thoại</th>
                    <th>Chức năng</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <th><input type="checkbox" class="tick" name="listproduct" value="@item.NhaCungCapId" /></th>
                        <td style="text-align: center;">@item.NhaCungCapId</td>
                        <td>@item.TenNhaCungCap</td>
                        <td>@item.DiaChi</td>
                        <td>@item.Email</td>
                        <td>@item.Sdt</td>
                        <td style="text-align: center;">
                            <a asp-action="Edit" asp-route-id="@item.NhaCungCapId"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                            <a onclick="Delete(@item.NhaCungCapId)"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
@section Scripts {
    <script>
        function Delete(productid) {
            var ans = confirm("Are you sure you want to delete this vendor?");
            if (ans) {
                $.ajax({
                    url: "/NhaCungCap/Delete/",
                    type: "POST",
                    data: { id: productid },
                    dataType: "text",
                    success: function (result) {
                        alert(result);
                        window.location.reload();
                    },
                    error: function (errormessage) {
                        alert(errormessage.responseText);
                    }
                });
            }
        };
        function DeleteSelected() {
            var ans = confirm("Are you sure you want to delete selected vendor?");
            if (ans) {
                var selectedIDs = new Array();
                $('input:checkbox.tick').each(function () {
                    if ($(this).prop("checked")) {
                        selectedIDs.push($(this).val());
                    }
                });
                $.ajax({
                    url: "/NhaCungCap/DeleteSelected/",
                    type: "POST",
                    dataType: "json",
                    contextType: "application/json",
                    data: { selected: selectedIDs },
                    //traditional: true,
                    success: function (result) {
                        alert(result);
                        window.location.reload();
                        //window.location.href("/SanPham");
                    },
                    error: function (errormessage) {
                        alert(errormessage.responseText);
                    }
                });


            }

        };
        $(document).ready(function () {
            $(function () {
                $('#checkall').change(function () {
                    if ($(this).prop("checked") == true) {
                        $("input[name=listproduct]").prop("checked", true);
                    }
                    else {
                        $("input[name=listproduct]").prop("checked", false);
                    }
                });

            });

        });
    </script>
}