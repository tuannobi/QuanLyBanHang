<div class="container">
    <div class="tech_store_index_col_1 colection">
        <div class="block_title">
            <h2>TRANG ĐIỂM</h2>
        </div>
        <ul>
            <li>
                <a href="/Category?id=9" title="">Son môi</a>
            </li>
            <li>
                <a href="/Category?id=10" title="">Trang điểm mắt</a>
            </li>
            <li>
                <a href="/Category?id=11" title="">Trang điểm mặt</a>
            </li>
        </ul>
        <div class="row">
            <div class="col-xs-12 index_col_products">
                <div class="row">

                    @foreach (var item in ViewBag.trangDiemSanPhams)
                    {

                        var masp = item.SanPhamId;
                        int giaBanLe = (int)item.GiaBanLe;

                        System.Globalization.NumberFormatInfo nfi = new System.Globalization.CultureInfo("vi-VN", false).NumberFormat;
                        nfi.CurrencyPositivePattern = 1;
                        var index = item.HinhAnh.IndexOf(',');
                        string hinhanh;
                        if (index != -1) hinhanh = item.HinhAnh.Substring(0, index);
                        else hinhanh = item.HinhAnh;

                        <div class="product_single col-xs-6 col-md-3">
                            <div class="product product_one clearfix ">
                                <div class="product-image">
                                    <a href="/ChiTietSanPham?id=@item.SanPhamId">
                                        <img src="~/client/images/product/@hinhanh" alt="">
                                    </a>
                                    <div class="quick_action clearfix">
                                        <a href="" title="Lựa chọn" class="btn-shopping-cart"><i class="fa fa-shopping-cart"></i></a>
                                        <a href="/ChiTietSanPham?id=@item.SanPhamId" itemprop="" title="Xem nhanh" class="btn-quicklook"><i class="fa fa-eye"></i></a>
                                    </div>


                                    @{var i = 1; }
                                    @foreach (var obj in item.ChiTietKhuyenMai)
                                    {
                                        if (i < 2)
                                        {
                                            var pt = obj.PhanTramGiam * 100;

                                            <div class="sale-flash">-@pt%</div>
                                        }
                                        i = i + 1;

                                    }


                                </div>
                                <div class="product-desc">
                                    <div class="product-title">
                                        <h3>
                                            <a href="/ChiTietSanPham?id=@item.SanPhamId" itemprop="" title="@item.TenSanPham">
                                                <p>@item.TenSanPham</p>
                                            </a>
                                        </h3>
                                    </div>
                                    <div class="product-price">
                                        <ins>@string.Format(nfi, "{0:C0}", giaBanLe)</ins>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

