@model QuanLyBanHang.Models.HoaDon;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Layout_Admin.cshtml";
}

@section Links{
    <link rel="stylesheet" href="~/admin/custom/admin_users.css" />
}
<div class="container">
    <div class="header-content">
        <h2>Danh sách hóa đơn chờ xử lí</h2>
        <a class="add-user btn" style="color:white" onclick="DuyetSelected()">
            <i class="fa fa-check" aria-hidden="true"></i>&nbsp;
            Duyệt hóa đơn
        </a>
    </div>
    <div class="content-content vertical-menu">
        <table>
            <tr>
                <th><input type="checkbox" id="checkall" /></th>
                <th>Số hóa đơn</th>
                <th>Ngày tạo</th>
                <th>Khách hàng</th>
                <th>Địa chỉ</th>
                <th>Phí ship</th>
                <th>Tổng tiền</th>
                <th>Chức năng</th>
            </tr>
            @foreach (var item in ViewBag.TTHD)
            {
                <tr>
                    <th><input type="checkbox" class="tick" name="listproduct" value="@item.HoaDonId" /></th>
                    <td style="text-align: center;">@item.HoaDonId</td>
                    <td style="text-align: center;">@String.Format("{0:dd/MM/yyyy}", @item.ThoiGianChoXuLy)</td>
                    <td style="text-align: center;">@item.KhachHang.HoTen</td>
                    <td style="text-align: center;">@item.SoNha, @item.Quan</td>
                    <td style="text-align: center;">@item.PhiShip.ChiPhi</td>
                    <td style="text-align: center;">@item.TongTienThanhToan</td>
                    <td style="text-align: center;">
                        <a asp-action="Details" asp-route-id="@item.HoaDonId" title="Chi tiết hóa đơn"><i class="fa fa-eye" aria-hidden="true"></i></a>
                        <a onclick="Duyet(@item.HoaDonId)"><i class="fa fa-check" aria-hidden="true"></i></a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
@section Scripts {
    <script>
        function Duyet(hoadonid) {
            var ans = confirm("Bạn có chắc chắn muốn duyệt hóa đơn này không?");
            if (ans) {
                $.ajax({
                    url: "/HoaDon/Duyet/",
                    type: "POST",
                    dataType: "json",
                    contextType: "application/json",
                    data: { id: hoadonid },
                    success: function (result) {
                        alert(result);
                        window.location.reload();
                    },
                    error: function (errormessage) {
                        alert(errormessage.responseText);
                    }
                });
            }
        };
        function DuyetSelected() {
            var ans = confirm("Bạn có chắc chắn muốn duyệt những hóa đơn này không?");
            if (ans) {
                var selectedIDs = new Array();
                $('input:checkbox.tick').each(function () {
                    if ($(this).prop("checked")) {
                        selectedIDs.push($(this).val());
                    }
                });
                $.ajax({
                    url: "/HoaDon/DuyetSelected/",
                    type: "POST",
                    dataType: "json",
                    contextType: "application/json",
                    data: { selected: selectedIDs },
                    //traditional: true,
                    success: function (result) {
                        alert(result);
                        window.location.reload();
                        //window.location.href("/SanPham");
                    },
                    error: function (errormessage) {
                        alert(errormessage.responseText);
                    }
                });


            }

        };
        $(document).ready(function () {
            $(function () {
                $('#checkall').change(function () {
                    if ($(this).prop("checked") == true) {
                        $("input[name=listproduct]").prop("checked", true);
                    }
                    else {
                        $("input[name=listproduct]").prop("checked", false);
                    }
                });

            });

        });
    </script>
}