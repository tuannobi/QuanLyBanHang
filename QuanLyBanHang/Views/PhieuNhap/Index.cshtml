@model IEnumerable<QuanLyBanHang.Models.PhieuNhap>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Layout_Admin.cshtml";
    var info = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
}

@section Links{
    <link rel="stylesheet" href="~/admin/custom/admin_users.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css">
}
<div class="container">
    <div class="header-content">
        <h2>Danh sách phiếu nhập</h2>
        <a class="add-user" onclick="DeleteSelected()">
            <i class="fa fa-minus" aria-hidden="true"></i>&nbsp;
            Xóa phiếu nhập
        </a>
        <a class="add-user" href="/PhieuNhap/Create">
            <i class="fa fa-plus" aria-hidden="true"></i>&nbsp;
            Thêm phiếu nhập
        </a>
    </div>
    <div >
        <table id="dtBasicExample" class="table table-hover tm-table-small" style="border-collapse: collapse;">
            <thead>
                <tr>
                    <th class="th-sm" scope="col"><input type="checkbox" id="checkall" /></th>
                    <th class="th-sm" scope="col">Mã phiếu nhập</th>
                    <th class="th-sm" scope="col">Nhà cung cấp</th>
                    <th class="th-sm" scope="col">Ngày nhập</th>
                    <th class="th-sm" scope="col">Tổng tiền</th>
                    <th class="th-sm" scope="col">Chức năng</th>
                </tr>
            </thead><tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td style="text-align: center;"><input type="checkbox" class="tick" name="listproduct" value="@item.PhieuNhapId" /></td>
            <td style="text-align: center;">@item.PhieuNhapId</td>
            <td style="text-align: center;">@item.NhaCungCap.TenNhaCungCap</td>
            <td style="text-align: center;">@String.Format("{0:dd/MM/yyyy}", @item.NgayTao)</td>
            <td style="text-align: center;">@String.Format(info, "{0:C0}", item.TongTien)</td>
            <td style="text-align: center;">
                <a asp-action="Details" asp-route-id="@item.PhieuNhapId" title="Chi tiết khuyến mãi"><i class="fa fa-eye" aria-hidden="true"></i></a>
                <a onclick="Delete(@item.PhieuNhapId)"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
            </td>
        </tr>
    }
</tbody>
        </table>
    </div>
</div>
@section Scripts {
   
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.bundle.min.js" integrity="sha384-1CmrxMRARb6aLqgBO7yyAxTOQE2AKb9GfXnEo760AUcUmFx3ibVJJAzGytlQcNXd" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#dtBasicExample').DataTable();
            $('.dataTables_length').addClass('bs-select');
        });
    </script>
    <script>
        function Delete(kmid) {
            var ans = confirm("Bạn có chắc chắn muốn xóa phiếu nhập này không?");
            if (ans) {
                $.ajax({
                    url: "/PhieuNhap/Delete/",
                    type: "POST",
                    dataType: "json",
                    contextType: "application/json",
                    data: { id: kmid },
                    success: function (result) {
                        alert(result);
                        window.location.reload();
                    },
                    error: function (errormessage) {
                        alert(errormessage.responseText);
                    }
                });
            }
        };
        function DeleteSelected() {
            var ans = confirm("Bạn có chắc chắn muốn xóa những phiếu nhập này không?");
            if (ans) {
                var selectedIDs = new Array();
                $('input:checkbox.tick').each(function () {
                    if ($(this).prop("checked")) {
                        selectedIDs.push($(this).val());
                    }
                });
                $.ajax({
                    url: "/PhieuNhap/DeleteSelected/",
                    type: "POST",
                    dataType: "json",
                    contextType: "application/json",
                    data: { selected: selectedIDs },
                    //traditional: true,
                    success: function (result) {
                        alert(result);
                        window.location.reload();
                        //window.location.href("/SanPham");
                    },
                    error: function (errormessage) {
                        alert(errormessage.responseText);
                    }
                });


            }

        };
        $(document).ready(function () {
            $(function () {
                $('#checkall').change(function () {
                    if ($(this).prop("checked") == true) {
                        $("input[name=listproduct]").prop("checked", true);
                    }
                    else {
                        $("input[name=listproduct]").prop("checked", false);
                    }
                });

            });

        });
    </script>
}