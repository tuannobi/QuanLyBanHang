
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/Layout_Admin.cshtml";
    var info = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
}

@section Links{
    <link rel="stylesheet" href="~/admin/custom/admin_users.css" />
}

<div class="container">
    <div class="header-content">
        <h2>Thông tin phiếu nhập</h2>
    </div>
    <div class="content-content vertical-menu">
        @foreach (var item1 in ViewBag.TTPN)
        {
            <div class="">
                <span class="span1">Mã phiếu nhập: </span>
                <span class="span2">@item1.PhieuNhapId</span>
            </div>
            <div class="">
                <span class="span1">Nhà cung cấp</span>
                <span class="span2">@item1.NhaCungCap.TenNhaCungCap</span>
            </div>
            <div class="">
                <span class="span1">Ngày nhập: </span>
                <span class="span2">@String.Format("{0:dd/MM/yyyy}", @item1.NgayTao)</span>
            </div>
            <div class="">
                <span class="span1"> Chi tiết phiếu nhập:</span>
            </div>
            <br />
        }
    <table>
        <tr>
            <th>Mã sản phẩm</th>
            <th>Tên sảm phẩm</th>
            <th>Số lượng</th>
            <th>Giá nhập</th>
        </tr>
        @foreach (var item in ViewBag.CTPN)
        {
            <tr>
                <td style="text-align: center;">@item.ID</td>
                <td style="text-align: center;">@item.Name</td>
                <td style="text-align: center;">@item.SL</td>
                <td style="text-align: center;">@item.GIA</td>
            </tr>
        }
        @foreach (var item in ViewBag.TTPN)
            {
                <tr>
                    <td></td>
                    <td></td>
                    <td><center><b>Tổng tiền:</b></center></td>
                    <td><center><b>@String.Format(info, "{0:C0}", item.TongTien)</b></center></td>
                </tr>

            }
        </table>
    </div>
</div>

